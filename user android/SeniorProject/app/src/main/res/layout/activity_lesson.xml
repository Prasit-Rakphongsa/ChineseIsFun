<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientmenu"
    tools:context="com.example.fong1.seniorproject.lesson"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="back"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_director" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Pronunciation"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/lesson"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/frame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:text="Lesson 1/3"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/start1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_login"
            android:onClick="start"
            android:text="Start"
            android:textColor="#006400"
            android:textStyle="bold" />

    </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/lesson"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/frame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="Lesson 2/3"
                android:paddingLeft="20dp"
                android:textSize="25dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/start2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_login"
                android:enabled="false"
                android:onClick="start"
                android:text="Start"
                android:textColor="#006400"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/lesson"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/frame3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="Lesson 3/3"
                android:paddingLeft="20dp"
                android:textSize="25dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/start3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_login"
                android:onClick="start"
                android:text="Start"
                android:textColor="#006400"
                android:enabled="false"
                android:textStyle="bold" />

        </FrameLayout>
    </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
